{
  "name": "shinyframeworks",
  "publisher": "davidrsch",
  "icon": "logo.png",
  "displayName": "shinyframeworks",
  "description": "Shiny Frameworks VS Code Extension",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidrsch/shinyframeworks-vscode"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:shinyframeworks.selectFramework",
    "onCommand:shinyframeworks.createApp",
    "onCommand:shinyframeworks.createModule",
    "onCommand:shinyframeworks.Addins",
    "onCommand:shinyframeworks.openFrameworkConfig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shinyframeworks.createModule",
        "title": "Create Module"
      },
      {
        "command": "shinyframeworks.createApp",
        "title": "Create App"
      },
      {
        "command": "shinyframeworks.Addins",
        "title": "Addins"
      },
      {
        "command": "shinyframeworks.selectFramework",
        "title": "Select Framework"
      },
      {
        "command": "shinyframeworks.openFrameworkConfig",
        "title": "Open Framework JSON"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "shinyframeworks.createModule",
          "group": "shinyframeworks",
          "when": "true",
          "arguments": [
            "${resourceUri}"
          ]
        },
        {
          "command": "shinyframeworks.createApp",
          "group": "shinyframeworks",
          "when": "true",
          "arguments": [
            "${resourceUri}"
          ]
        },
        {
          "command": "shinyframeworks.Addins",
          "group": "shinyframeworks",
          "when": "true",
          "arguments": [
            "${resourceUri}"
          ]
        },
        {
          "command": "shinyframeworks.selectFramework",
          "group": "shinyframeworks",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "properties": {
        "shinyframeworks.framework.defaultLanguage": {
          "type": "string",
          "default": "r",
          "enum": [
            "r",
            "python"
          ],
          "enumDescriptions": [
            "Use R for Shiny frameworks",
            "Use Python for Shiny frameworks"
          ],
          "description": "Default language for Shiny frameworks in this workspace."
        },
        "shinyframeworks.framework.defaultFramework": {
          "type": "string",
          "default": "shiny",
          "enum": [
            "shiny",
            "rhino",
            "golem",
            "teal"
          ],
          "enumDescriptions": [
            "Base Shiny app",
            "Appsilon's Rhino framework",
            "Golem framework",
            "teal framework"
          ],
          "description": "Default Shiny framework for this workspace."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && npm run lint  && node esbuild.js --production",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch",
    "pretest": "npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "vsix": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.11.22",
    "@types/vscode": "1.66.0",
    "@types/winreg": "^1.2.36",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.24.2",
    "eslint": "^9.15.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "@vscode/vsce": "^3.0.0"
  },
  "extensionDependencies": [],
  "dependencies": {
    "@vscode/python-extension": "^1.0.5",
    "istextorbinary": "^9.5.0",
    "lz-string": "^1.5.0",
    "winreg": "^1.2.5"
  }
}
