{
  "name": "shinyframeworks",
  "publisher": "davidrsch",
  "icon": "logo.png",
  "displayName": "shinyframeworks",
  "description": "Shiny Frameworks VS Code Extension",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidrsch/shinyframeworks-vscode"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shinyframeworks.createModule",
        "title": "Create Module"
      },
      {
        "command": "shinyframeworks.createApp",
        "title": "Create App"
      },
      {
        "command": "shinyframeworks.Addins",
        "title": "Addins"
      },
      {
        "command": "shinyframeworks.selectFramework",
        "title": "Select Framework"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "shinyframeworks.createModule",
          "group": "shinyframeworks",
          "when": "true",
          "arguments": [
            "${resourceUri}"
          ]
        },
        {
          "command": "shinyframeworks.createApp",
          "group": "shinyframeworks",
          "when": "true",
          "arguments": [
            "${resourceUri}"
          ]
        },
        {
          "command": "shinyframeworks.Addins",
          "group": "shinyframeworks",
          "when": "true",
          "arguments": [
            "${resourceUri}"
          ]
        },
        {
          "command": "shinyframeworks.selectFramework",
          "group": "shinyframeworks",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "properties": {
        "shinyframeworks.framework.defaultLanguage": {
          "type": "string",
          "default": "r",
          "string": "r",
          "description": "The allowed languages are: python and r. The selected language:"
        },
        "shinyframeworks.framework.defaultFramework": {
          "type": "string",
          "default": "shiny",
          "string": "shiny",
          "description": "The allowed frameworks are: shiny. The selected framework:"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && npm run lint  && node esbuild.js --production",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch",
    "pretest": "npm run compile && nnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "vsix": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "1.66.0",
    "@types/winreg": "^1.2.36",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "vsce": "^1.97.0"
  },
  "dependencies": {
    "@vscode/python-extension": "^1.0.5",
    "winreg": "^1.2.5"
  }
}
